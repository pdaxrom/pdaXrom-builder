#mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/obj-minimo

# This file specifies the build flags for Firefox.  You can use it by adding:
#  . $topsrcdir/browser/config/mozconfig
# to the top of your mozconfig file.

export CROSS_COMPILE=1
export MOZ_PHOENIX=1
mk_add_options MOZ_PHOENIX=1

ac_add_options --enable-default-toolkit=gtk2
ac_add_options --enable-xft

ac_add_options --disable-ldap
ac_add_options --disable-mailnews
ac_add_options --enable-extensions=cookie,pref,universalchardet
ac_add_options --enable-crypto
ac_add_options --disable-composer
# ac_add_options --disable-profilesharing

ac_add_options --enable-necko-protocols=http,ftp,file,res,jar

ac_add_options --disable-tests
ac_add_options --disable-dtd-debug
ac_add_options --disable-logging
ac_add_options --disable-shared
ac_add_options --enable-static

ac_add_options --enable-reorder
ac_add_options --enable-elf-dynstr-gc

ac_add_options --enable-optimize="-Os -fomit-frame-pointer -mcpu=xscale -mtune=xscale"
ac_add_options --disable-debug
ac_add_options --enable-strip

